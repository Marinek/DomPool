{{yield}}

{{#if session.isAuthenticated}}
  <a {{ action 'invalidateSession' }}>Logout</a>
{{else}}
  <form class="form-inline" {{action "login" on="submit"}}>
    <div class="form-group">
      {{input class="form-control" placeholder="Benutzername" type="email" value=username}}
    </div>
    <div class="form-group">
      {{input class="form-control" placeholder="Passwort" type="password" value=password}}
    </div>
    <button type="submit" class="btn btn-primary">
      <span class="glyphicon glyphicon-cog"></span> Sign in
    </button>
  </form>
{{/if}}
